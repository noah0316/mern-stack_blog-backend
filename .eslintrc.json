{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["warn", 2],
        "linebreak-style": ["warn", "unix"],
        "no-console": "off",
        "no-unused-vars": "warn",
        "quotes": ["warn", "single"],
        "semi": ["warn", "always"],
        "sort-imports": [
            "warn",
            {
                "allowSeparatedGroups": true,
                "memberSyntaxSortOrder": ["single", "multiple", "all", "none"]
            }
        ]
    }
}
